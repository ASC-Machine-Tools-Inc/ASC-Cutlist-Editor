<UserControl x:Class="AscCutlistEditor.Views.MQTT.UptimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mqtt="clr-namespace:AscCutlistEditor.ViewModels.MQTT"
             d:DataContext="{d:DesignInstance Type=mqtt:MachineMessageViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <DataGrid
                ItemsSource="{Binding MachineDataCollection}"
                AutoGenerateColumns="True"
                IsReadOnly="True"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                HorizontalAlignment="Stretch">
                <!-- Disable selection -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="IsHitTestVisible" Value="False" />
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <oxy:PlotView
                Grid.Column="1"
                Margin="5"
                Model="{Binding UptimePlot}" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ProgressBar
                    MinHeight="50"
                    MinWidth="100"
                    Foreground="Green"
                    Value="{Binding UptimeRunningPercentage}">
                    <ProgressBar.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </ProgressBar.LayoutTransform>
                </ProgressBar>
                <TextBlock
                    Text="{Binding UptimeRunningPercentage,
                    StringFormat=Uptime: {0:#,#.0}%}"></TextBlock>
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ProgressBar
                    MinHeight="50"
                    MinWidth="100"
                    Foreground="Red"
                    Value="{Binding UptimeRunningPercentage,
                    Converter={StaticResource InversePercentageConverter}}">
                    <ProgressBar.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </ProgressBar.LayoutTransform>
                </ProgressBar>
                <TextBlock
                    Text="{Binding UptimeRunningPercentage,
                    Converter={StaticResource InversePercentageConverter},
                    StringFormat=Downtime: {0:#,#.0}%}"></TextBlock>
            </StackPanel>

            <oxy:PlotView
                Grid.Column="2"
                Margin="5"
                Model="{Binding UptimePercentagePlot}" />
        </Grid>
    </Grid>
</UserControl>