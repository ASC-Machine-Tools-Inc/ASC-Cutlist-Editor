<Window x:Class="AscCutlistEditor.Views.MQTT.SqlSettingsControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AscCutlistEditor.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
        mc:Ignorable="d"
        Title="Sql Connection Settings" Height="450" Width="800">
    <Grid Margin="50 25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label>Data Source:</Label>
        <TextBox
            Grid.Column="1"
            Text="{Binding SqlConnectionViewModel[DataSource]}"
            Margin="10"></TextBox>

        <Label Grid.Row="1">Database Name:</Label>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding SqlConnectionViewModel[DatabaseName]}"
                 Margin="10"></TextBox>

        <Label Grid.Row="2">Username:</Label>
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Text="{Binding SqlConnectionViewModel[Username]}"
                 Margin="10"></TextBox>

        <Label Grid.Row="3">Password:</Label>
        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Text="{Binding SqlConnectionViewModel[Password]}"
                 Margin="10"></TextBox>

        <Button
            Grid.Column="1"
            Grid.Row="4"
            Command="{Binding ConnectToSqlServerCommand}"
            Margin="10">
            Test SQL Server Connection
        </Button>
    </Grid>
</Window>