<Window x:Class="AscCutlistEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views1="clr-namespace:ASC_Cutlist_Editor.Views"
        xmlns:views="clr-namespace:AscCutlistEditor.Views"
        xmlns:viewModels="clr-namespace:ASC_Cutlist_Editor.ViewModels"
        xmlns:viewModels1="clr-namespace:AscCutlistEditor.ViewModels"
        mc:Ignorable="d"
        Title="ASC Cutlist Editor" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=viewModels1:MainViewModel}"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Open"
                          Command="{Binding
                    CutlistViewModel.ImportCutlistCommand}">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
            </MenuItem>
            <MenuItem Header="_View">
                <!-- TODO: get checkmark working -->
                <MenuItem Header="Cutlist Data View"
                          Command="{Binding ToggleCutlistCommand}"
                          IsChecked="{Binding UiVisibility[0]}"></MenuItem>
                <MenuItem Header="2D View"
                          Command="{Binding ToggleFlatViewCommand}"></MenuItem>
                <MenuItem Header="3D View"
                          Command="{Binding Toggle3DCommand}"></MenuItem>
            </MenuItem>
        </Menu>

        <Border BorderBrush="Gray"
                BorderThickness="0 0 0 1"></Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <views:CutlistDataControl
                    Visibility="{Binding UiVisibility[0],
                    Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

            <Grid Grid.Column="2">
                <views1:FlatPartControl
                    Visibility="{Binding UiVisibility[1],
                    Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" />

            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <DockPanel Margin="5">
                    <TextBlock Text="3D Bundle View"
                               FontWeight="Bold"
                               TextAlignment="Center" />
                </DockPanel>

                <Border BorderBrush="Gray"
                        BorderThickness="0 0 0 1"></Border>
            </Grid>
        </Grid>
    </Grid>
</Window>