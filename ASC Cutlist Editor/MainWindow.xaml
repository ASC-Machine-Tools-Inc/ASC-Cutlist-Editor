<Window x:Class="ASC_Cutlist_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASC_Cutlist_Editor"
        mc:Ignorable="d"
        Title="ASC Cutlist Editor" Height="450" Width="800"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="_File">
            </MenuItem>
            <MenuItem Header="_Edit">
            </MenuItem>
            <MenuItem Header="_View">
            </MenuItem>
        </Menu>

        <Border BorderBrush="Black"
                BorderThickness="0 0 0 1"></Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="CutlistGrid"
                      AutoGenerateColumns="True"
                      ItemsSource="{Binding }"
                      HorizontalAlignment="Stretch"></DataGrid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

            <ui:SimpleStackPanel Grid.Column="2" Margin="5,0,0,0">
                <Button x:Name="btnAdd" Content="Add File" Margin="0,5,0,0"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="ButtonAddName_Click" />
            </ui:SimpleStackPanel>
        </Grid>
    </Grid>
</Window>